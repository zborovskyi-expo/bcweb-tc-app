<!-- Page Heading -->
<div class="row">
  {{#if errors}}
    {{#each errors}}
      <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
  {{/if}}
  <div class="col-lg-12">
    <h1 class="page-header">{{ lang.edit_blocking }}</h1>
    <p>{{ lang.edit_blocking_desc }}</p>
    <form action="/settings/edit_blocking" method="post">
      {{#each users_list}}
        <div class="form-group row">
          <label class="control-label col-sm-2" for="{{this.username}}">{{ this.username }}</label>
          <div class="col-sm-10">
            <label for="{{this.username}}_true" class="radio-inline">
              <input type="radio" name="{{this.username}}" id="{{this.username}}_true" value="true" {{#if this.blockedByIp }} checked {{/if}}>
              {{ ../lang.blocking_is_on }}
            </label>
            <label for="{{this.username}}_false" class="radio-inline">
              <input type="radio" name="{{this.username}}" id="{{this.username}}_false" value="false" {{#if this.blockedByIp }}{{else}} checked {{/if}}>
              {{ ../lang.blocking_is_off }}
            </label>
          </div>
        </div>
      {{/each}}
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">{{ lang.submit }}</button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- /.row -->

<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{ title }}</h1>
    <p>{{ desc }}</p>
    <form action="/logs/edit_log" method="post">
      <div class="form-group row">
        <label class="control-label col-sm-2" for="username">Username:</label>
        <div class="col-sm-10">
          <select class="form-control" name="username" id="username">
            {{#each users }}
              <option>{{ this }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="status">Status:</label>
        <div class="col-sm-10">
          <select class="form-control" name="status" id="status">
            <option></option>
            <option>started</option>
            <option>overed</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="date">Date</label>
        <div class="col-sm-10">
          <input class="form-control" type="date" name="date" value="" id="date">
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="time-start">Time Start</label>
        <div class="col-sm-10">
          <input class="form-control" type="time" name="time_start" value="" id="time-start">
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="time-over">Time Over</label>
        <div class="col-sm-10">
          <input class="form-control" type="time" name="time_over" value="" id="time-over">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- /.row -->

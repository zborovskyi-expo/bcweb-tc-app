<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{ lang.edit_langs }}</h1>
    <p>{{ lang.edit_langs_desc }}</p>
    <p>{{ lang.language }}: {{ language.name_full }}</p>
    <form action="/settings/edit_langs/{{ language.name_short }}" method="post">
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">{{ lang.submit }}</button>
        </div>
      </div>
      {{#each lang_list }}
        <div class="form-group row">
          <label class="control-label col-sm-2" for="{{@key}}">{{@key}}</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" value="{{this}}" name="{{@key}}" id="{{@key}}">
          </div>
        </div>
      {{/each}}
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">{{ lang.submit }}</button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- /.row -->

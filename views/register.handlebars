<div class="row">
  {{#if errors}}
    {{#each errors}}
      <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
  {{/if}}
  {{#if error_username}}
    <div class="alert alert-danger">{{error_username}}</div>
  {{/if}}
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Please Sign Up</h3>
      </div>
      <div class="panel-body">
        <form method="post" action="/users/register">
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1"><i class="fa fa-fw fa-user"></i></span>
              <input type="text" class="form-control" name="username" placeholder="Username" aria-describedby="basic-addon1">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon2"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
              <input type="password" class="form-control" name="password" placeholder="Password" aria-describedby="basic-addon2">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon3"><i class="fa fa-repeat" aria-hidden="true"></i></span>
              <input type="password" class="form-control" name="password2" placeholder="Confirm Password" aria-describedby="basic-addon3">
            </div>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

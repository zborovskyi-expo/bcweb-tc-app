<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{ lang.add_log_title }}</h1>
    <p>{{ lang.add_log_desc }}</p>
    <form action="/logs/add_log" method="post">
      <div class="form-group row">
        <label class="control-label col-sm-2" for="username">{{ lang.username }}</label>
        <div class="col-sm-10">
          <select class="form-control" name="username" id="username" data-live-search="true">
            {{#each users }}
              <option>{{ this }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="status">{{ lang.status }}</label>
        <div class="col-sm-10">
          <select class="form-control" name="status" id="status">
            <option>{{ lang.status_started }}</option>
            <option>{{ lang.status_overed }}</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="date">{{ lang.date_text }}</label>
        <div class="col-sm-10">
          <input class="form-control" type="date" name="date" value="2011-08-19" id="date">
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="time-start">{{ lang.time_start }}</label>
        <div class="col-sm-10">
          <input class="form-control" type="time" name="time_start" value="08:00" id="time-start">
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="time-over">{{ lang.time_over }}</label>
        <div class="col-sm-10">
          <input class="form-control" type="time" name="time_over" value="18:00" id="time-over">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">{{ lang.submit }}</button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- /.row -->

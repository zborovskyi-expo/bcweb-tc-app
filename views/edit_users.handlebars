<!-- Page Heading -->
<div class="row">
  {{#if errors}}
    {{#each errors}}
      <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
  {{/if}}
  {{#if error_username}}
    <div class="alert alert-danger">{{error_username}}</div>
  {{/if}}
  <div class="col-lg-12">
    <h1 class="page-header">{{ lang.edit_users }}</h1>
    <p>{{ lang.edit_users_desc }}</p>
    <form action="/settings/edit_users" method="post">
      <div class="form-group row">
        <label class="control-label col-sm-2" for="select_username">{{ lang.select_username }}</label>
        <div class="col-sm-10">
          <select class="form-control" name="select_username" id="select_username" data-live-search="true">
            {{#each users }}
              <option>{{ this }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="new_username">{{ lang.new_username }}</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="new_username" value="" id="new_username">
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="new_password">{{ lang.new_password }}</label>
        <div class="col-sm-10">
          <input class="form-control" type="pass" name="new_password" value="" id="new_password">
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="new_password_confirm">{{ lang.new_password_confirm }}</label>
        <div class="col-sm-10">
          <input class="form-control" type="pass" name="new_password_confirm" value="" id="new_password_confirm">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">{{ lang.submit }}</button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- /.row -->

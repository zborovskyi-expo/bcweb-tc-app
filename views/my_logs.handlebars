{{#ifNotEquals time_start ""}}
  <div class="clock" id="clock_content">
    <span class="clock_start">
      {{time_start}}
    </span>
    <span class="clock_plus">
      {{time_plus}}
    </span>
  </div>
{{/ifNotEquals}}

{{#if username}}
  <h1 class="page-header">{{ lang.logs_by_user }} {{ username }}</h1>
  <p>{{ lang.logs_by_user_desc }} {{ username }}</p>
{{else}}
  <h1 class="page-header">{{ lang.my_logs }}</h1>
{{/if}}

<div class="row">
  <div class="col-lg-12">
    {{#each logs }}
      <div class="panel panel-default panel-m-top">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-calendar" aria-hidden="true"></i> {{this.monthName}} {{this.yearName}}</h3>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
              <thead>
                <tr>
                  <th>{{ ../lang.date_text }}</th>
                  <th>{{ ../lang.time_start }}</th>
                  <th>{{ ../lang.time_over }}</th>
                  <th>{{ ../lang.time_plus }}</th>
                  <th>{{ ../lang.username }}</th>
                  <th>{{ ../lang.status }}</th>
                  <th>{{ ../lang.sum_time }}</th>
                </tr>
              </thead>
              <tbody>
                {{#each this.logs}}
                  <tr {{#if this.weekend }}class="weekend"{{/if}}>
                    <td>{{this.date}}</td>
                    <td>{{this.time_start}}</td>
                    <td>{{this.time_over}}</td>
                    <td><div style="display: flex">{{this.time_plus.time}}
                      {{#ifNotEquals this.time_plus.description ""}}
                        <div data-toggle="popover" data-placement="bottom" data-content="{{this.time_plus.description}}">
                          <i class="fa fa-fw fa-caret-down"></i>
                        </div>
                      {{/ifNotEquals}}
                    </div></td>
                    <td>{{this.username}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.sum_time}}</td>
                  </tr>
                {{/each}}
                <tr>
                  <td colspan="7" class="all_time">Suma godzin: {{this.sum_time}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div><!-- /panel-body -->
      </div><!-- /panel -->
    {{/each}}
  </div>
</div>

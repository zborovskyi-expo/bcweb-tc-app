<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">{{ lang.export_logs_title }}</h1>
    <p>{{ lang.export_logs_desc }}</p>
    <form action="/logs/export_logs" method="post">
      <div class="form-group row">
        <label class="control-label col-sm-2" for="username">{{ lang.username }}</label>
        <div class="col-sm-10">
          <select class="form-control" name="username" id="username" data-live-search="true">
            {{#each users }}
              <option>{{ this }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="month">{{ lang.month }}</label>
        <div class="col-sm-10">
          <select class="form-control" name="month" id="month">
            {{#each months }}
              <option>{{ this }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label class="control-label col-sm-2" for="year">{{ lang.year }}</label>
        <div class="col-sm-10">
          <select class="form-control" name="year" id="year">
            {{#each years }}
              <option>{{ this }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">{{ lang.submit }}</button>
        </div>
      </div>
    </form>
  </div>
</div>
<!-- /.row -->
